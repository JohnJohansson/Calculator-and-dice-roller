<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="App10.pages.Dice"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Label HorizontalOptions="CenterAndExpand" Text="Roll the Dice!" />
            <Image x:Name="image" />
            <Button Text="Roll" Clicked="Roll_Btn"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>